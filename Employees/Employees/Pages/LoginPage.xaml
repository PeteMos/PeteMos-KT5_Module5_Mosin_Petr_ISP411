<Page x:Class="Employees.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employees.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="ИС прокат спортивного инвентаря - авторизация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="LoginTextBox" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>

            <Label Content="Пароль:" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <PasswordBox x:Name="PasswordBox" VerticalAlignment="Center" HorizontalAlignment="Center"></PasswordBox>

            <Button x:Name="LoginButton" Content="Войти"
                    Click="LoginButton_Click" Margin="10" Background="#FF498C51"/>
        </StackPanel>
    </Grid>
</Page>
